<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br><br>
    <p>Ingredients<p>
    <%= f.fields_for :ingredients do |ing| %>
        <%= ing.label :name %>
        <%= ing.text_field :name %><br>

        <%= ing.label :quantity %>
        <%= ing.text_field :quantity %><br>
        <br>
    <% end %>
    <br>
    <%= f.submit %>

<% end %>
